.container
  = form_with(model: @profile, url: profile_path, method: 'put', local: true) do |f|
    %div
      = f.label :avatar, 'アバター'
    %div
      = f.file_field :avatar
    %div
      = f.label :name, '名前'
    %div
      = f.text_field :name, class: 'text'
    %div
      = f.label :bio, '自己紹介'
    %div
      = f.text_area :bio
    .btn-submit
      = f.submit '保存', class: 'btn-primary'
