.container
  = form_with(model: @profile, url: profile_path, method: 'put', local: true) do |f|
    %div
      = f.label :avatar, 'アバター', class: 'label'
    %div
      = f.file_field :avatar
    %div
      = f.label :bio, '自己紹介', class: 'label'
    %div
      = f.text_area :bio
    %div
      = f.label :theme, 'テーマ', class: 'label'
    %div
      = f.select :theme, Profile.themes.keys, {}, { class: 'text' }
    .btn-submit
      = f.submit '保存', class: 'btn-primary'
