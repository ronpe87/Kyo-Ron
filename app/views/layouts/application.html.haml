!!!
%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %title KyoRon
    = csrf_meta_tags
    = csp_meta_tag
    = stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload'
    = javascript_pack_tag 'application', 'data-turbolinks-track': 'reload'
    %meta{:content => "width=device-width, initial-scale=1.0", :name => "viewport"}/
  %body
    - if !current_page?(new_user_session_path) && !current_page?(new_user_registration_path)
      %header.header
        .header_title
          = link_to 'Signal', root_path
        .header_right
          - if user_signed_in?
            - if current_page?(profile_path)
              .timeline-btn
                = link_to 'TimeLine', timeline_path
            - else
              .dropdown
                = image_tag current_user.avatar_image
                .dropdown_content
                  = link_to 'Profile', profile_path, class: 'log_out'
                  = link_to 'Log_out', destroy_user_session_path, data: { method: 'delete' }, class: 'log_out'
          - else
            .guest
              = link_to 'guest', users_guest_sign_in_path, method: :post
            .login_btn
              = link_to 'Log_in', new_user_session_path, class: 'header_loginBtn'
    - if flash.present?
      .flash
        - flash.each do |key, value|
          %div{:class => key}= value
    - if !current_page?(root_path)
      .float_btn.back
        = link_to 'javascript:history.back()' do
          = image_tag 'back.png'
    = yield
